# Claude Remote UI Configuration

# Flask server settings
server:
  host: "0.0.0.0"  # Listen on all interfaces (accessible via Tailscale)
  port: 5001

# Tailscale hostname (optional)
# Get your hostname with: tailscale status | grep $(hostname)
# Example: "my-machine.ts.net" or leave empty to use localhost
tailscale_host: ""

# Telegram notification settings
# 1. Create a bot: Message @BotFather on Telegram, send /newbot
# 2. Get your chat ID: Start a chat with your bot, then visit:
#    https://api.telegram.org/bot<YOUR_TOKEN>/getUpdates
#    Look for "chat":{"id":YOUR_CHAT_ID}
telegram:
  bot_token: "YOUR_TELEGRAM_BOT_TOKEN_HERE"
  chat_id: "YOUR_TELEGRAM_CHAT_ID_HERE"
  enabled: true

# Context lines to show in notification
context_lines: 20
